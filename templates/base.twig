{% block head %}
	{% include 'head.twig' %}
{% endblock %}
	<body class="{{page}}" data-source="{% block source %}base.twig{% endblock %}">
		{% block nav %}
			{% include 'nav.twig' %}
		{% endblock %}
		<div class="container-fluid">
		{% block content %}
			{% if user %}
				<h1>Welcome, {{user.fname}}!</h1>
			{% else %}
				<h1>Welcome to HopsEx: <small>The world's #1 beer exchange</small></h1>
			{% endif %}
		{% endblock %}
		</div>
		<footer id="footer">
			{% include 'footer.twig' %}
			{% block footer %}
			
			{% endblock %}
		</footer>
    </body>
</html>